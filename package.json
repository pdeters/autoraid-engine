{
  "private": true,
  "name": "my-app",
  "version": "1.0.0",
  "description": "npm init template for bootstraping an empty Colyseus project",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf ./dist ./app",
    "start": "concurrently --kill-others-on-fail --handle-input \"npm run start:app\" \"npm run start:dash\"",
    "start:app": "nodemon --watch app -e ts --exec \"ts-node app/index.ts\"",
    "build:app": "tsc -p tsconfig.json",
    "start:dash": "parcel dash/index.html",
    "build:dash": "parcel build dash/index.html",    
    "bundle": "npm run clean && npm run build:app && npm run build:dash && ncp dist/ app/public",
    "lint": "npm run lint-js && npm run lint-css",
    "fix-lint": "npm run fix-js && npm run fix-css",
    "lint-js": "eslint --ext .js --report-unused-disable-directives --cache --cache-location out/ .",
    "fix-js": "npm run lint-js -- --fix",
    "lint-css": "stylelint \"dash/*.{css,less,sass,scss,sss,styl}\" --report-needless-disables --report-invalid-scope-disables --ignore-path .gitignore --cache --cache-location out/",
    "fix-css": "npm run lint-css -- --fix"  
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/colyseus/create-colyseus/issues"
  },
  "homepage": "https://github.com/colyseus/create-colyseus#readme",
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Safari versions"
  ],
  "devDependencies": {
    "@colyseus/loadtest": "^0.14.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.12.1",
    "eslint-config-google": "^0.14.0",
    "nodemon": "^2.0.6",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "ts-node": "^8.1.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@colyseus/monitor": "^0.12.2",
    "@colyseus/social": "^0.10.9",
    "colyseus": "^0.14.0",
    "colyseus.js": "^0.14.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1"
  }
}
